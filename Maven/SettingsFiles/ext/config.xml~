All these values can be overriden by command line arguments. These are the defaults loaded as Pagelyzer config.
-->
<config>
    <pagelyzer>
        <run>
            <verbose>true</verbose>
            <default>
                <parameter>
                    <get>score</get>
                    <browser>firefox</browser>
                    <browser1>firefox</browser1>
                    <browser2>firefox</browser2>
                    <outputfile>page.#{ext}</outputfile>
                </parameter>
                <comparison>
                    <mode>images</mode>
                    <!-- Uncomment <path> to take always this path by default. If it is commented the <JarPath>/resources/ext/ will be used-->
                    <!--
                    <path>/home/sanojaa/src/pagelyzer/Maven/Pagelyzer/src/main/resources/ext/</path>
                    -->
                    <subdir>/home/pehlivanz/Bureau/pagelyzerconfig/ext/</subdir>
                </comparison>
            </default>
            <internal>
                <server>
                    <!-- 
                      uncommend <url> to use another server different from localhost. For instance, remote apache server
                      if it is uncommented the internal ServerLyzer class will be used.
                    -->
                    <!--
                    <remote>
                        <url>http://remote:port/path</url>
                    </remote>
                    -->
                    <local>
                        <ip>127.0.0.1</ip>
                        <port>8016</port>
                         <!-- 
                            uncommend <wwwroot> to use another server different from the provided with the jar. For instance, remote other web folder
                            if it is uncommented the internal ServerLyzer default location will be used.
                          -->
                        <!--<wwwroot>/var/www/</wwwroot>-->
                    </local>
                </server>
            </internal>
        </run>
         <debug>
            <screenshots>
                <active>true</active>
                <path>/home/sanojaa/</path>
                <filepattern>page#{n}.png</filepattern>
            </screenshots>
        </debug>
    </pagelyzer>
    <selenium>
        <run>
            <mode>local</mode>     
        </run>
        <server>
            <url>http://127.0.0.1:8015/wd/hub</url>
        </server>
    </selenium>
    <bom>
        <granularity>5</granularity>
        <separation>50</separation>
    </bom>
</config>
